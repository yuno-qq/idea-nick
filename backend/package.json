{
  "name": "@ideanick/backend",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "ts-node-dev --watch ./src/emails/dist,./.env --rs --exit-child ./src/index.ts",
    "build-emails": "rimraf ./src/emails/dist && cmd /c mkdir .\\src\\emails\\dist && mjml ./src/emails/*.mjml -o ./src/emails/dist",
    "watch-emails": "mjml -w ./src/emails/*.mjml -o ./src/emails/dist",
    "copy-emails": "copyfiles ./src/emails/dist/*.html ./dist/backend",
    "build-ts": "rimraf ./dist && tsc --build ./tsconfig.json",
    "build": "pnpm build-ts && pnpm build-emails && pnpm copy-emails",
    "start": "node ./dist/backend/src/index.js",
    "pmd": "prisma migrate dev",
    "pgc": "prisma generate",
    "types": "tsc --noEmit --project ./tsconfig.json",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext .ts .",
    "prepare": "ts-patch install -s",
    "TODO_prepare": "pnpm pgc && ts-patch install -s"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "dependencies": {
    "@ideanick/webapp": "workspace:*",
    "@prisma/client": "5.2.0",
    "@trpc/server": "10.37.1",
    "axios": "1.5.0",
    "cors": "2.8.5",
    "cron": "2.4.3",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "fast-glob": "3.3.1",
    "handlebars": "4.7.8",
    "jsonwebtoken": "9.0.2",
    "lodash": "^4.17.21",
    "mjml": "4.14.1",
    "passport": "0.6.0",
    "passport-jwt": "4.0.1",
    "superjson": "1.13.3",
    "zod": "3.22.2"
  },
  "devDependencies": {
    "@types/cors": "2.8.13",
    "@types/cron": "2.4.0",
    "@types/express": "4.17.17",
    "@types/jsonwebtoken": "9.0.2",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.6.2",
    "@types/passport": "1.0.12",
    "@types/passport-jwt": "3.0.9",
    "prisma": "5.2.0"
  }
}
