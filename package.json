{
  "name": "ideanick",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "b": "pnpm --filter @ideanick/backend",
    "w": "pnpm --filter @ideanick/webapp",
    "dev": "pnpm --r --parallel dev",
    "types": "concurrently \"pnpm b types\" \"pnpm w types\"",
    "lint": "concurrently \"pnpm b lint\" \"pnpm w lint\"",
    "prettify": "prettier --log-level log --cache --write {webapp,backend}/src/**/*.{ts,tsx,js,json,yml,scss} !**/{node_modules,dist}/**/*",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "8.47.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-react-app": "7.0.1",
    "eslint-config-standard-with-typescript": "37.0.0",
    "eslint-plugin-node": "11.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "3.0.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
